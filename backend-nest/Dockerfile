# ===================================
# Build Stage
# ===================================
FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./

# ุชุซุจูุช ูู ุงูุงุนุชูุงุฏูุงุช (ุจูุง ูููุง dev) ููุจูุงุก โ legacy-peer-deps ูุชุฌุงูุฒ ุชุนุงุฑุถุงุช ุงูููุชุจุงุช
RUN npm install --legacy-peer-deps && npm cache clean --force

# ูุณุฎ ูููุงุช ุงูุฅุนุฏุงุฏุงุช ุฃููุงู
COPY tsconfig*.json ./
COPY nest-cli.json ./

# ูุณุฎ ุจุงูู ุงููููุงุช
COPY . .

# ุจูุงุก ุงูุชุทุจูู ูุน ุงูุชุญูู ูู ุงููุฌุงุญ
RUN echo "๐จ ุจุฏุก ุนูููุฉ ุงูุจูุงุก..." && \
    npm run build && \
    echo "โ ุงูุจูุงุก ูุฌุญ!" || \
    (echo "โ Build failed!" && exit 1)

# ุงูุชุญูู ูู ูุฌูุฏ ููู dist/main.js
RUN echo "๐ ุงูุชุญูู ูู ูููุงุช ุงูุจูุงุก..." && \
    ls -la /app/dist/ && \
    (test -f /app/dist/main.js || test -f /app/dist/src/main.js) || \
    (echo "โ dist/main.js or dist/src/main.js not found!" && ls -la /app/dist/ && exit 1)

# ===================================
# Production Stage
# ===================================
FROM node:20-alpine AS production

ENV NODE_ENV=production
WORKDIR /app

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
  adduser -S nestjs -u 1001

COPY package*.json ./

# ููุง ููุท ูุซุจุช ุญุฒู ุงูุฅูุชุงุฌ (npm install + legacy-peer-deps ูุชุฌุงูุฒ ุชุนุงุฑุถุงุช ุงูููุชุจุงุช)
RUN npm install --production --legacy-peer-deps && npm cache clean --force

# ูุณุฎ ูููุงุช ุงูุจูุงุก ูุน ุงูุชุญูู
COPY --from=builder --chown=nestjs:nodejs /app/dist ./dist

# ุงูุชุญูู ูู ูุฌูุฏ ูููุงุช ุงูุจูุงุก ุจุนุฏ ุงููุณุฎ
RUN (test -f /app/dist/main.js || test -f /app/dist/src/main.js) || \
    (echo "โ dist/main.js or dist/src/main.js not found after copy!" && ls -la /app/dist/ && exit 1)
RUN ls -la /app/dist/ || (echo "โ dist directory is empty!" && exit 1)

# ุฅูุดุงุก ูุฌูุฏ logs ูุฅุนุทุงุก ุงูุตูุงุญูุงุช ูููุณุชุฎุฏู nestjs
RUN mkdir -p /app/logs && \
    chown -R nestjs:nodejs /app/logs && \
    chmod -R 755 /app/logs

USER nestjs

EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000/health/liveness', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# ุงุณุชุฎุฏุงู ุงููุณุงุฑ ุงูุตุญูุญ ุจูุงุกู ุนูู ููุงู ุงูููู (ุจุนุฏ ุฅุถุงูุฉ rootDir ูู tsconfig.json ูุฌุจ ุฃู ูููู dist/main.js)
CMD ["node", "dist/main.js"]